{
  "name": "tap-empire-server",
  "version": "1.0.0",
  "description": "Backend server for Tap Empire social clicker game",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest --watchAll=false --forceExit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --forceExit",
    "test:unit": "node src/tests/testRunner.js unit",
    "test:integration": "node src/tests/testRunner.js integration",
    "test:performance": "node src/tests/testRunner.js performance",
    "test:e2e": "node src/tests/testRunner.js e2e",
    "test:anticheat": "node src/tests/testRunner.js anticheat",
    "test:all": "node src/tests/testRunner.js all",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "db:migrate:prod": "NODE_ENV=production node scripts/migrate.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.14.3",
    "pg": "^8.11.3",
    "redis": "^4.6.8",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "jest": "^29.6.4",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "telegram",
    "mini-app",
    "clicker-game",
    "social",
    "gaming",
    "backend"
  ],
  "author": "Tap Empire Team",
  "license": "MIT"
}
